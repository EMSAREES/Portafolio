---
import translations from "../data/translations.json";
---

<section id="home" class="min-h-screen flex items-center justify-center bg-linear-to-br from-slate-900 via-blue-950 to-slate-900 pt-20 px-6 md:px-10">
    <div class="max-w-7xl w-full grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Text Content -->
        <div class="text-white space-y-6 order-2 lg:order-1">
            <h2 
                id="hero-greeting" 
                class="text-2xl md:text-3xl font-medium text-gray-300 flex items-center gap-2"
            >
                {translations.en.hero.greeting}
                <span class="wave inline-block">ðŸ‘‹</span>
            </h2>
            
            <h1 
                id="hero-role" 
                class="text-5xl md:text-7xl font-bold bg-linear-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent"
            >
                {translations.en.hero.role}
            </h1>
            
            <p 
                id="hero-description" 
                class="text-xl md:text-2xl text-gray-400 max-w-xl"
            >
                {translations.en.hero.description}
            </p>

            <!-- Social Links -->
            <div class="flex gap-4 pt-6">
                <a 
                    href={translations.en.hero.github} 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-3 bg-slate-800 rounded-full hover:bg-cyan-500 transition-all duration-300 hover:scale-110 group"
                    aria-label="GitHub"
                >
                    <svg class="w-6 h-6 text-gray-300 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
                
                <a 
                    href={translations.en.hero.linkedin} 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-3 bg-slate-800 rounded-full hover:bg-cyan-500 transition-all duration-300 hover:scale-110 group"
                    aria-label="LinkedIn"
                >
                    <svg class="w-6 h-6 text-gray-300 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Profile Image -->
        <div class="order-1 lg:order-2 flex justify-center">
            <div class="relative group">
                <!-- Glow effect -->
                <div class="absolute inset-0 bg-linear-to-r from-cyan-400 to-blue-500 rounded-full blur-2xl opacity-30 group-hover:opacity-50 transition-opacity duration-500 animate-pulse"></div>
                
                <!-- Image container -->
                <div class="relative">
                    <div class="w-72 h-72 md:w-96 md:h-96 rounded-full overflow-hidden border-4 border-cyan-500 shadow-2xl shadow-cyan-500/50 transform group-hover:scale-105 transition-transform duration-500">
                        <img 
                            id="hero-picture"
                            src={translations.en.hero.picture} 
                            alt="Emilio R. - Frontend Developer"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    
                    <!-- Floating decoration -->
                    <div class="absolute -top-4 -right-4 w-20 h-20 bg-cyan-500 rounded-full flex items-center justify-center animate-bounce shadow-lg">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
    </div>
</section>

<script define:vars={{ translations }}>
    // Listen for language change events
    document.addEventListener('languageChanged', (event) => {
        const lang = event.detail.lang;
        updateHeroContent(lang);
    });

    function updateHeroContent(lang) {
        // Update hero greeting (con emoji)
        const greetingEl = document.getElementById('hero-greeting');
        if (greetingEl) {
            greetingEl.innerHTML = 
                `${translations[lang].hero.greeting} <span class="wave inline-block">ðŸ‘‹</span>`;
        }

        // Update hero role
        const roleEl = document.getElementById('hero-role');
        if (roleEl) {
            roleEl.textContent = translations[lang].hero.role;
        }

        // Update hero description
        const descriptionEl = document.getElementById('hero-description');
        if (descriptionEl) {
            descriptionEl.textContent = translations[lang].hero.description;
        }
    }

    // Smooth scroll for buttons
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
</script>

<style>
    /* Wave animation */
    .wave {
        animation: wave-animation 2.5s infinite;
        transform-origin: 70% 70%;
        display: inline-block;
    }

    @keyframes wave-animation {
        0% { transform: rotate(0deg); }
        10% { transform: rotate(14deg); }
        20% { transform: rotate(-8deg); }
        30% { transform: rotate(14deg); }
        40% { transform: rotate(-4deg); }
        50% { transform: rotate(10deg); }
        60% { transform: rotate(0deg); }
        100% { transform: rotate(0deg); }
    }

    /* Gradient text animation */
    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    h1 {
        background-size: 200% 200%;
        animation: gradient 5s ease infinite;
    }

    /* Pulse animation for glow */
    @keyframes pulse {
        0%, 100% {
            opacity: 0.3;
        }
        50% {
            opacity: 0.5;
        }
    }
</style>